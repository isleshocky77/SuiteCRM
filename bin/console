#!/usr/bin/env php
<?php
defined("PROJECT_ROOT") || define("PROJECT_ROOT", realpath(__DIR__ . DIRECTORY_SEPARATOR . '..'));
defined("sugarEntry") || define("sugarEntry", 'console');
set_time_limit(0);
if(!file_exists('vendor/autoload.php')) {
    echo "Composer has not been initialized! Please run 'composer update' from project root folder.\n";
    exit(1);
}
require_once PROJECT_ROOT . '/vendor/autoload.php';
require_once PROJECT_ROOT . '/suitecrm_version.php';
$app = new SuiteCrm\Console\Application('SuiteCrm Console', $suitecrm_version);
$app->run();
